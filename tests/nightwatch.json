{
  "src_folders": ["tests", "apps"],
  "output_folder": "reports",
  "custom_commands_path": "commands",

  "webdriver": {
    "start_process": true,
    "server_path": "",
    "host": "127.0.0.1",
    "port": 4444
  },

  "test_settings": {
    "default": {
      "launch_url": "http://local.sandstorm.io:6080",
      "webdriver": {
        "start_process": true,
        "server_path": "node_modules/chromedriver/lib/chromedriver/chromedriver",
        "port": 4444
      },
      "backwards_compatibility_mode": true,
      "disable_colors": true,
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "goog:chromeOptions": {
          "args": ["--headless", "--no-sandbox", "--disable-dev-shm-usage", "--disable-gpu"],
          "prefs": {
            "download.prompt_for_download": false,
            "download.directory_upgrade": true,
            "safebrowsing.enabled": true
          }
        }
      },
      "exclude": ["unittests"]
    },
    "unittests": {
      "src_folders": ["unittests"],
      "start_session": false,
      "exclude": ["tests", "apps"]
    }
  }
}
